<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_setting"
        android:padding="@dimen/p10"
        android:orientation="vertical">
        <TextView
            android:text="Settings"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            style="@style/category_title"
            android:textSize="30sp"
            android:gravity="bottom"/>
        <TextView
            android:text="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/p10">
        <!-- Notifications -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv.notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m10"
            android:layout_marginBottom="@dimen/m10"
            app:cardCornerRadius="@dimen/r15"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/p10"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/ic_notification"
                    android:layout_width="32dp"
                    android:layout_height="32dp"/>
                <TextView
                    android:text="@string/text_notifications"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/p10"
                    style="@style/category_title"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <!-- Widgets -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv.widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m10"
            android:layout_marginBottom="@dimen/m10"
            app:cardCornerRadius="@dimen/r15"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/p10"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/ic_widgets"
                    android:layout_width="32dp"
                    android:layout_height="32dp"/>
                <TextView
                    android:text="@string/text_widgets"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/p10"
                    style="@style/category_title"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>